@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@section css {
    <link rel="stylesheet" href="~/css/styles_form.css" asp-append-version="true" />
}


<div class="content-wrap">
    <h2 class="page-title divider">@ViewData["Title"]</h2>

    <section class="register">

        <form id="registerForm" method="post">
            <fieldset>

                <legend>@ViewData["Title"]</legend>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="">
                    <label asp-for="Input.Email"></label>
                    <br />
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <br />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="">
                    <label asp-for="Input.Password"></label>
                    <br />
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <br />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <br />
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <br />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div>
                    <button id="registerSubmit" type="submit" class="sbm-btn">Register</button>
                </div>
            </fieldset>

            <div class="login-register-switch">Already registered? Go to <a asp-page="./Login">login</a>.</div>
        </form>

    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

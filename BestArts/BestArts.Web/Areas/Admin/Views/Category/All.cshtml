@model IEnumerable<AllCategoriesViewModel>

@using BestArts.Web.Infrastructure.Extensions

@using static BestArts.Common.GeneralApplicationConstants

@{
    ViewData["Title"] = "Categories";
}

@section css {
    <link rel="stylesheet" href="~/css/styles_categories.css" asp-append-version="true" />
}

<div class="content-wrap all-categories">
    <a class="add-btn green-btn button" asp-area="@AdminAreaName" asp-controller="Category" asp-action="Add">Add</a>

    <h2 class="page-title divider">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <span>
            There are no categories available.
        </span>
    }
    else
    {
        <section class="category-list">
            <div class="categories">
                @foreach (var category in Model)
                {
                    <div class="category-box">
                        <div class="category-name">
                            @category.Name
                        </div>
                        <div class="category-btns">
                            <a asp-area="@AdminAreaName" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="edit-btn green-btn button">Edit</a>
                        </div>
                    </div>
                }
            </div>
        </section>
    }
</div>
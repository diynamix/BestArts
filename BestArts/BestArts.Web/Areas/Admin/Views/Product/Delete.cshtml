@model ProductSoftDeleteViewModel

@{
    ViewBag.Title = "Delete Product";
}

@section css {
    <link rel="stylesheet" href="~/css/styles_product_details.css" asp-append-version="true" />
        }

<div class="content-wrap delete-product">
    <h2 class="page-title divider">@ViewData["Title"]</h2>

    <div class="product-box">
        <div class="product-img">
            <img src="~/img/handmade/@Model.ImageUrl" alt="Product Image" />
        </div>
        <div class="product-info">
            <div class="product-name">
                @Model.Name
            </div>
            <div class="product-type">
                Category: @Model.CategoryName
            </div>
            <br />
            Are you sure you want to delete this product?
            <div class="product-btns">
                <br />
                <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" class="edit-btn button">Cancel</a>
                <form method="post" asp-area="Admin" asp-action="Delete">
                    <input type="submit" value="Delete" class="delete-btn button" />
                </form>
            </div>
        </div>
    </div>
</div>
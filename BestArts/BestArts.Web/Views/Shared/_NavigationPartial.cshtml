@using Microsoft.AspNetCore.Identity
@using BestArts.Data.Models
@using BestArts.Services.Data.Interfaces
@using BestArts.Web.Infrastructure.Extensions

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IUserService userService

@{
    string displayUserName = await userService.GetFirstNameByEmailAsync(User.Identity?.Name!);
}

<div id="nav-bar">
    @if (!User.IsAdmin())
    {        
        <ul class="left-nav">
            <li class="nav-item">
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Product" asp-action="All">Handmade</a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Home" asp-action="Contacts">Contacts</a>
            </li>
        </ul>
        <ul class="right-nav">
            @if (!SignInManager.IsSignedIn(User))
            {
                <li class="nav-item">
                    <a asp-area="" asp-controller="User" asp-action="Login">Login</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="User" asp-action="Register">Register</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a href="wishlist.html">
                        @*<i class="fa-solid fa-heart"></i>*@
                        Wishlist
                    </a>
                </li>
                <li class="nav-item">
                    <a href="basket.html">
                        @*<i class="fa-solid fa-basket-shopping"></i>*@
                        Basket
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="User" asp-action="Account">
                        @*<i class="fa-solid fa-user"></i>
                        <span style=" font-family: Dubai;">@displayUserName</span>*@
                        Account
                    </a>
                </li>
            }
        </ul>
    }
    else
    {
        <ul class="left-nav">
            <li class="nav-item">
                <a asp-area="" asp-controller="Product" asp-action="All">Products</a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Order" asp-action="All">Orders</a>
            </li>
            <li class="nav-item">
                <a asp-controller="User" asp-action="Account">Account</a>
            </li>
        </ul>
        <ul class="right-nav">
            <li class="nav-item">
                <a asp-area="" asp-controller="Product" asp-action="Add">Add Product</a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Category" asp-action="Add">Add Category</a>
            </li>
        </ul>
    }
</div>



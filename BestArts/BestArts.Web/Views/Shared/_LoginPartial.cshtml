@using Microsoft.AspNetCore.Identity
@using BestArts.Data.Models
@using BestArts.Web.Infrastructure.Extensions

@using static BestArts.Common.GeneralApplicationConstants

@inject SignInManager<ApplicationUser> SignInManager

<div id="nav-bar">
    @if (!User.IsAdmin())
    {
        <ul class="left-nav">
            <li class="nav-item">
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Product" asp-action="All">Handmade</a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="Home" asp-action="Contacts">Contacts</a>
            </li>
        </ul>
    }
    else
    {
        <ul class="left-nav">
            <li class="nav-item">
                <a asp-area="" asp-controller="Product" asp-action="All">Products</a>
            </li>
            <li class="nav-item">
                <a asp-area="@AdminAreaName" asp-controller="Category" asp-action="All">Categories</a>
            </li>
            <li class="nav-item">
                <a asp-area="@AdminAreaName" asp-controller="Order" asp-action="All">Orders</a>
            </li>
        </ul>
    }
    @if (!SignInManager.IsSignedIn(User))
    {
        <ul class="right-nav">
            <li class="nav-item">
                <a asp-area="" asp-controller="User" asp-action="Login">Login</a>
            </li>
            <li class="nav-item">
                <a asp-area="" asp-controller="User" asp-action="Register">Register</a>
            </li>
        </ul>
    }
    else
    {
        <ul class="right-nav">
            @if (User.IsAdmin())
            {
                <li class="nav-item">
                    <a asp-area="@AdminAreaName" asp-controller="User" asp-action="All">Users</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a asp-area="" asp-controller="Wishlist" asp-action="All">Wishlist</a>
                </li>
                <li class="nav-item">
                    <a asp-area="" asp-controller="Cart" asp-action="All">Basket</a>
                </li>
            }
            <li class="nav-item">
                <a asp-area="" asp-controller="User" asp-action="Account">Account</a>
            </li>
        </ul>
    }
</div>
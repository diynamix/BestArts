@using Microsoft.AspNetCore.Identity
@using BestArts.Data.Models
@using BestArts.Web.Infrastructure.Extensions

@using static BestArts.Common.GeneralApplicationConstants

@inject SignInManager<ApplicationUser> SignInManager

@if (!SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a asp-area="" asp-controller="User" asp-action="Login">Login</a>
    </li>
    <li class="nav-item">
        <a asp-area="" asp-controller="User" asp-action="Register">Register</a>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-area="" asp-controller="Wishlist" asp-action="All">Wishlist</a>
    </li>
    <li class="nav-item">
        <a asp-area="" asp-controller="Cart" asp-action="All">Basket</a>
    </li>
    <li class="nav-item">
        <a asp-area="" asp-controller="User" asp-action="Account">Account</a>
    </li>
}
@model OrderAllViewModel

<div class="order divider">
    <a asp-area="" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model.Id">
        <div class="order-id">
            Order Id: <span>@Model.Id</span>
        </div>
        <div class="order-info">
            <div class="order-status">
                Status: <span>@Model.OrderStatus</span>
            </div>
            <div class="order-date">
                Date: <span>@Model.CreatedOn</span>
            </div>
        </div>
        <div class="order-info">
            <div class="order-price">
                Price: <span>@Model.GrandTotalPrice BGN</span>
            </div>
            <div class="order-payment">
                Payment: <span>@Model.PaymentMethod</span>
            </div>
        </div>
    </a>
</div>
@using static BestArts.Common.GeneralApplicationConstants;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BestArts</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kalam:wght@300;400;700&family=Rancho&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    @RenderSection("css", false)

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <partial name="_NotificationsPartial" />
    <header class="divider">
        <div class="content-wrap">
            <nav>
                <div class="navigation">
                    <div id="logo">
                        <a asp-area="" asp-controller="Home" asp-action="Index"><h1>Best Arts</h1></a>
                        <button type="button" id="nav-drop-btn" data-toggle="collapse" data-target="#nav-bar" aria-expanded="false" aria-controls="navbar">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>

                    <partial name="_NavigationPartial" />
                </div>
            </nav>
        </div>
    </header>

    <main role="main" class="divider">
        @RenderBody()
    </main>

    <footer>
        <div class="content-wrap">
            <span>copyright &copy; <a href="https://www.linkedin.com/in/diyana-cholakova" target="_blank">Diyana Cholakova</a></span>
            <span>Handmade by <a href="https://www.facebook.com/people/Tanja-Art/100064584887224/" target="_blank">Tanja Art</a></span>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

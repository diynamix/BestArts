@model ProductAllViewModel

@using BestArts.Services.Data.Interfaces
@using BestArts.Web.Infrastructure.Extensions

@inject IWishlistService WishlistService

<div class="product-box">
    <div class="product-img">
        <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id">
            <img src="~/img/handmade/@Model.ImageUrl" alt="Product Image" />
        </a>
    </div>
    <div class="product-info">
        <div class="product-name">
            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id">
                @Model.Name
            </a>
        </div>
        <div class="product-type">
            @Model.CategoryName
        </div>
        <div class="product-size">
            @Model.Width.ToString("0.#") x @Model.Height.ToString("0.#") cm
        </div>
        <div class="product-price">
            @Model.Price BGN
        </div>
    </div>
    @if (User.IsAdmin())
    {
        <div class="product-btns admin">
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="edit-btn button">Edit</a>
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="danger-btn button">Delete</a>
        </div>
    }
    else
    {
        <div class="product-btns user">
            @if ((User?.Identity?.IsAuthenticated ?? false) &&
                    (await WishlistService.IsAlreadyAddedAsync(User.GetId()!, Model.Id)))
            {
                <form method="post" asp-controller="Product" asp-action="Remove" asp-route-userId="@User.GetId()" asp-route-productId="@Model.Id">
                    <input type="submit" value="Remove" class="wishlist-btn danger-btn button" />
                </form>
            }
            else
            {
                <form method="post" asp-controller="Product" asp-action="AddToWishlist" asp-route-userId="@User?.GetId()" asp-route-productId="@Model.Id">
                    <input type="submit" value="Add to wishlist" class="wishlist-btn success-btn button" />
                </form>
            }
        </div>
    }
</div>
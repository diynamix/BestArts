@model ProductAllViewModel

@using BestArts.Web.Infrastructure.Extensions

<div class="product-box">
    <div class="product-img">
        <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id">
            <img src="~/img/handmade/@Model.ImageUrl" alt="Product Image" />
        </a>
    </div>
    <div class="product-info">
        <div class="product-name">
            <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id">
                @Model.Name
            </a>
        </div>
        <div class="product-type">
            @Model.CategoryName
        </div>
        <div class="product-size">
            @Model.Width.ToString("0.#") x @Model.Height.ToString("0.#") cm
        </div>
        <div class="product-price">
            @Model.Price BGN
        </div>
    </div>
    @if (User.IsAdmin())
    {
        <div class="product-btns admin">
            <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="edit-btn button">Edit</a>
            <a asp-controller="Product" asp-action="Delete" asp-route-id="@Model.Id" class="delete-btn button">Delete</a>
        </div>
    }
    else @*if (User.Identity?.IsAuthenticated ?? false)*@
    {
        <div class="product-btns user">
            <button class="add-to-wishlist-btn">Add to wishlist</button>
        </div>
    }
</div>
@model LoginFormModel

@{
    ViewData["Title"] = "Log in";
}

@section css {
    <link rel="stylesheet" href="~/css/styles_form.css" asp-append-version="true" />
}

<div class="content-wrap">
    <h2 class="page-title divider">@ViewData["Title"]</h2>

    <section class="login">
        <form method="post">

            <fieldset>

                <legend>@ViewData["Title"]</legend>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div>
                    <label asp-for="Email" class="form-label"></label>
                    <br />
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <br />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <label asp-for="Password" class="form-label"></label>
                    <br />
                    <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <br />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div>
                    <div class="checkbox">
                        <label asp-for="RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>

                <div>
                    <button id="login-submit" type="submit" class="sbm-btn">Log in</button>
                </div>
            </fieldset>

            <div class="login-register-switch">Don't have an account? Go to <a a asp-controller="User" asp-action="Register">register</a>.</div>
        </form>

    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

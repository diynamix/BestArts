@{
    ViewData["Title"] = "Contacts";
}

@section css {
    <link rel="stylesheet" href="~/css/styles_form.css" asp-append-version="true" />
}

<div class="content-wrap contacts">
    <h2 class="page-title divider">@ViewData["Title"]</h2>

    <section class="form-section">

        <form class="contacts-form" method="get">

            <fieldset>

                <legend>Leave a message</legend>

                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="input" name="name" type="text" size="20" placeholder="Name" required>
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="input" name="email" type="email" placeholder="you@example.com" required>
                </div>

                <div class="form-group">
                    <label for="email">Subject</label>
                    <input class="input" name="subject" type="text" placeholder="Custom flowers card" required>
                </div>

                <div class="form-group">
                    <label for="textarea">Message</label>
                    <textarea class="input" name="textarea" cols="30" rows="15" placeholder="Compose your message here..." required></textarea>
                </div>

                <div>
                    <button class="sbm-btn" type="submit">Send</button>
                </div>

            </fieldset>

        </form>
    </section>
</div>